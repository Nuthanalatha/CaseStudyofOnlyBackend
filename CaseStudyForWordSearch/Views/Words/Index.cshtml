@model IEnumerable<CaseStudyForWordSearch.Models.Word>

@{
    ViewData["Title"] = "Index";
}

<style>
    .card {
        padding: 1rem;
        margin-bottom: 1rem;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    }
</style>



<h1 class="display-4 mt-5">List of Words</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>


<div class="container text-center">
    <div class="row">
        @foreach (var item in Model) {
<div class="card word-card col-lg-3 col-md-6 col-sm-12" style="width: 18rem;">
    <img class="card-img-top" src="~/images/word.jpg" />
    <div class="card-body">
        <h5 class="card-title">Word: @Html.DisplayFor(modelItem => item.WordSearch)</h5>
        <p class="card-text">Definition: @Html.DisplayFor(modelItem => item.Definition)</p>
    </div>

    <div class="card-body">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </div>
</div>}
    </div>
</div>

